<body>
  <section class="signbgs">
    <div class="container">
      <div class="innersignin">
        <div class="row">       
          <div class="col-md-12 col-sm-12">
            <div class="signin-s">            
              <a href="#"><img src="/assets/logoh.png"/></a>
            </div>          
            <div class="heka-forms">
              <h3>Sign In to HEKA</h3>
              <div class="row">
                <div class="col-md-5 col-sm-12">
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="form-group">
                      <!-- <label>Email or Username</label> -->
                      <label>Email</label>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control" %>
                    </div>
                    <div class="form-group">
                      <label>Password</label>
                      <%= f.password_field :password, autocomplete: "off" ,class:"form-control" %>
                    </div>
                    <div class="row m-t-40">
                      <div class="col-sm-12 col-md-6">
                        <%= f.submit "Submit" ,class: "btn btn-default btn-block btn-submit"%>
                      </div>  
                      <div class="col-sm-12 col-md-6">
                        <%= link_to "Forgot your password?", new_password_path(resource_name) ,class: "forgot-pass"%>
                      </div>                    
                    </div>                
                  <% end %>
                </div>
                <div class="col-md-2 col-sm-12">
                  <div class="or-dist">
                    OR
                  </div>
                </div>
                <div class="col-md-5 col-sm-12">
                  <div class="social-btns">
                    <a href="/users/auth/facebook" class="fb-icn btn"><i class="fab fa-facebook-f"></i> Log in via Facebook</a>
                    <a href="/users/auth/google_oauth2" class="btn gplus-icon"><i class="fab fa-google-plus-g"></i> Log in via Google</a>
                    <div class="row">
                      <div class="col-md-6 col-sm-12">
                        <a href='/users/auth/github' type="button" class="btn btn-block" style="margin-top:0;">
                         <i class="fab fa-github" aria-hidden="true"></i>
                          </a>
                      </div>
                      <div class="col-md-6 col-sm-12">
                        <button class="btn btn-block btn-git"><i class="fab fa-gitlab"></i></button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>            
            <div class="sign-link-up-block">
              <p>Donâ€™t have account yet? <a href="/users/sign_up" class="link">Register</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>