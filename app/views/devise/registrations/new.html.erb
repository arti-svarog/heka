<section class="signbgs">
	<div class="container">
		<div class="innersignin">
			<div class="row">				
				<div class="col-md-12 col-sm-12">
					<div class="signin-s">
						<a href="/"><img src="/assets/logoh.png"/></a>
					</div>					
					<div class="heka-forms">
						<h3>Register with HEKA</h3>
						<div class="row">
							<div class="col-md-5 col-sm-12">
								<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
									<%= devise_error_messages! %>
									<div class="form-group">
										<!-- <label>Email or Username</label> -->
										<label>Email</label>
										<!-- <input type="email" class="form-control"> -->
										<%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control"%>
									</div>
									<div class="form-group">
										<label>Password</label>
										<%= f.password_field :password, autocomplete: "off" ,class: "form-control"%>
									</div>
									<div class="form-group">
										<label>Password Confirmation</label>
										<%= f.password_field :password_confirmation, autocomplete: "off" ,class: "form-control"%>
									</div>
									<!-- <div class="form-group m-b-15">
										<div class="sml-text">Password strength</div>
										  <div class="progress">
												<div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100">
												</div>
											</div>
									</div> -->
									<div class="checkbox">
										<label>
											<input type="checkbox"> I agree with HEKA<a href="#" target="_blank">Terms of Use</a> and  <a href="#" target="_blank">Privacy Policy</a>
										</label>
									 </div>
									<div class="row m-t-40">
										<div class="col-sm-12 col-md-12">
											<%= f.submit "Register", class: "btn btn-block btn-submit" %>
										</div>	
									</div>								
								<% end %>
							</div>
							<div class="col-md-2 col-sm-12">
								<div class="or-dist">
									OR
								</div>
							</div>
							<div class="col-md-5 col-sm-12">
								<div class="social-btns">
									<a href="/users/auth/facebook" class="fb-icn btn"><i class="fab fa-facebook-f"></i> Log in via Facebook</a>
									<a href="/users/auth/google_oauth2" class="btn gplus-icon"><i class="fab fa-google-plus-g"></i> Log in via Google</a>
									<div class="row">
										<div class="col-md-6 col-sm-12">
											<button class="btn btn-block btn-vk"><i class="fab fa-vk"></i></button>
										</div>
										<div class="col-md-6 col-sm-12">
											<button class="btn btn-block btn-git"><i class="fab fa-gitlab"></i></button>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>						
				</div>
			</div>
		</div>
	</div>
</section>